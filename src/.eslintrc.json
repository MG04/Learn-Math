{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react", "react-hooks"],
    "rules": {
      "react/prop-types": "off",
      "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    }
  }